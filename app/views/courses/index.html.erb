<div class="container">
<div class="row">
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<% @courses.each do |course| %>
  <div class="course col-md-6">
    <p><strong>Name: </strong><%= course.name %></p>
    <p><strong>Descrição: </strong><%= course.description %></p>
    <p><strong>Status: </strong><%= course.status %></p>
  </div>
<% end %>
</div>
</div>
