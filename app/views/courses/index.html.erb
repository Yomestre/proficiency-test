<div class="row">
  <% if flash[:notice] %>
    <div class="notice bg-success"><%= flash[:notice] %></div>
  <% end %>
  <div class="page-header">
    <h1>Lista de cursos</h1>
  </div>
  <br>
  <% @courses.each do |course| %>
    <div class="course col-md-6">
      <%= render partial: 'course', locals: { course: course } %>
    </div>
  <% end %>
  <br>
</div>
